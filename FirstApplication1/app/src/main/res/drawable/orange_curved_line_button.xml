<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0.7dp"
                android:color="#ff7200" />

            <solid android:color="#EEEEEE" />
			
            <corners android:radius="5dip"/>
            
            <padding
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"
                android:top="10dp" >
            </padding>
        </shape>
    </item>

    <item android:state_focused="true"
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0.7dp"
                android:color="#ff7200" />

            <solid android:color="#EEEEEE" />
			
            <corners android:radius="5dip"/>
            
            <padding
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"
                android:top="10dp" >
            </padding>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0.7dp"
                android:color="#ff7200" />

            <solid android:color="#FFFFFF" />
			
            <corners android:radius="5dip"/>
            
            <padding
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"
                android:top="10dp" >
            </padding>
        </shape>
	    </item>
</selector>